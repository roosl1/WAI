@charset "EUC-KR";
.button {
    width:100px;
    height:40px;
    background-color: #000000;
    border: none;
    color:#fff;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 13px;
    cursor: pointer;
}

.button-map {
    width:100px;
    height:100px;
    background-color: #000000;
    border: none;
    color:#fff;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 15px;
    cursor: default;
	margin: 10px;
}


.button:hover {
    background-color: #808080;
}
