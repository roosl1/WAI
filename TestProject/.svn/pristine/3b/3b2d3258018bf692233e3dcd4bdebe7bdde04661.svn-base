</div>

<div id="all-content">
<br><br>
<%-- ${sessionScope.user }님
<hr> --%>
	<table id = "main_list" class="table">
		<tr>
			<th>번호</th>
			<th>분류</th>
			<th>제목</th>
			<th>작성자</th>
			<th>작성일</th>
			<th>답변여부</th>
		</tr>
		<c:forEach var="imsi" items="${list1 }">
			<tr>
				<td>${imsi.qnano }</td>
				<td>${imsi.qnakind }</td>
				<c:if test="${imsi.qnalock == 0}">
					<td><a href="javascript:void(0);" onclick="viewcon(${imsi.qnano });">${imsi.qnasubject }</a></td>
				</c:if>
				<c:if test="${imsi.qnalock == 1}">
					<td><a href="javascript:void(0);" onclick="viewcon(${imsi.qnano });">${imsi.qnasubject }<img src="https://iconmonstr.com/wp-content/g/gd/makefg.php?i=../assets/preview/2012/png/iconmonstr-lock-3.png&r=0&g=0&b=0" width="15" height="15"></a></td>
				</c:if>
				<td>${imsi.memberid }</td>
				<td>${imsi.qnadate }</td>
				<c:if test="${imsi.qnaanswer == 0}">
					<td>준비 중</td>
				</c:if>
				<c:if test="${imsi.qnaanswer == 1}">
					<td style="color:red;">답변 완료</td>
				</c:if>
			</tr>
		</c:forEach>
	</table>
	<div id = "co">
	</div>
	<c:if test="${sessionScope.user != 'admin'}">
		<table align="right">
			<tr>
				<td colspan = 6><input class="button" type="button" value="작성하기" onclick="location.href='goqnainsert'"></td>
			</tr>
		</table>
	</c:if>
	<br>
	<div id="all-paging">
	  <c:forEach var="i" begin="1" end="${totalnum2 }" step="1">
        <li>
           <a href="goqnaboard?page=${i }">${i }</a>
        </li>
   </c:forEach>
   </div>
	</div>
</div> 
</body>
</html>